# .env.example

# ============================================
# API KEYS & AUTHENTICATION
# ============================================
OPENAI_API_KEY='sk-your-key-here'

# ============================================
# MODEL CONFIGURATION
# ============================================
MODEL_NAME='gpt-4o'
TEMPERATURE=0.7
MAX_TOKENS=4000

# ============================================
# AGENT CONFIGURATION
# ============================================
MAX_ROUNDS=15
TERMINATION_MSG='TERMINATE'
MAX_RETRIES=3
AGENT_TIMEOUT=120

# ============================================
# DOCKER CONFIGURATION
# ============================================
DOCKER_IMAGE='python:3.11-slim'
USE_DOCKER=true
DOCKER_TIMEOUT=300

# ============================================
# FILE HANDLING
# ============================================
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS='csv,xlsx,json,parquet'
UPLOAD_DIR='./data/uploads'
OUTPUT_DIR='./data/outputs'
TEMP_DIR='./temp'

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL='INFO'
LOG_FILE='./logs/datawise.log'
VERBOSE_LOGGING=false

# ============================================
# STREAMLIT CONFIGURATION
# ============================================
STREAMLIT_PORT=8501
STREAMLIT_ADDRESS='localhost'